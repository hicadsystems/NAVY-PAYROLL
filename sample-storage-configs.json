{
  "local": {
    "type": "local",
    "path": "./backups",
    "permissions": "0755"
  },
  "ftp": {
    "type": "ftp",
    "host": "ftp.example.com",
    "port": 21,
    "username": "backup_user",
    "password": "secure_password",
    "remote_path": "/backups",
    "passive": true
  },
  "aws_s3": {
    "type": "aws-s3",
    "region": "us-west-2",
    "bucket": "my-backup-bucket",
    "access_key_id": "YOUR_ACCESS_KEY",
    "secret_access_key": "YOUR_SECRET_KEY",
    "path_prefix": "database-backups/"
  }
}